{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "declaration": false,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  },
  "include": ["src","json"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}